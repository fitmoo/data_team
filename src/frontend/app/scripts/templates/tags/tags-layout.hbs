<!-- Add new Tags popup-->
<div id="create-new-tags" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
    <h3>Add New Tags</h3>
    <div class="clearfix"></div>
  </div>
  <div class="modal-body">
		<div class="control-group">
			<label class="control-label" for="tags-name">Tag Names:</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="tags-name" data-role="tagsinput" placeholder="Add tags">
			</div>
		</div>
  </div>
  <div class="modal-footer">
    <a class="btn cancel-btn" data-dismiss="modal" aria-hidden="true">Cancel</a>
    <a class="btn btn-primary create-btn" href="javaScript:void(0);" disabled="disabled">Add New</a>
  </div>
</div>

<!-- Delete Tags popup-->
<div id="delete-tags-popup" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
    <h3>Delete Tags</h3>
    <div class="clearfix"></div>
  </div>
  <div class="modal-body">
		<div class="control-group">
			<label class="control-label" for="tags-name">Tag Names:</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="delete-tag-names" placeholder="Add tags">
			</div>
		</div>
  </div>
  <div class="modal-footer">
    <a class="btn" data-dismiss="modal" aria-hidden="true">Cancel</a>
    <a class="btn btn-primary delete-btn" href="javaScript:void(0);" disabled="disabled">Delete</a>
  </div>
</div>
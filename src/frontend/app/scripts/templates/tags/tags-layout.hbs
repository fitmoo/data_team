<div class="container-fluid">
	<section>
		<div class="page-header sub-header">
			<h1>Tag Management</h1>
			<a href="#delete-tags-popup" id="delete-tags" role="button" class="btn btn-danger" data-toggle="modal">Delete</a>
  		{{!-- <input id="import-tags" type="file" accept=".csv" name="files[]" data-url="/"> --}}
			<a href="#create-new-tags" id="add-tags" role="button" class="btn btn-success" data-toggle="modal">Add New</a>
			<div class="clearfix"></div>
		</div>
		
		<div class="tags-container">
			<div class="indicator"></div>

			<table class="table table-striped table-condensed">

				<tbody>
					<tr class="tags-content"></tr>
				</tbody>

			</table>

		</div>

<form class="form-horizontal" onsubmit="return false;">
    <fieldset>
        <div class="control-group">
            <label class="control-label">Add a Class</label>
            <div class="controls">
                <button id="addItem-btn" class="btn btn-success">Add Item</button>
            </div>

        </div>
    </fieldset>
</form>

<form class="form-horizontal add-calendar-item" style="display: none;">
    <fieldset>
        <div class="calendar-form">
            <div class="control-group">
                <label class="control-label" for="cl-className">Name:</label>
                <div class="controls">
                    <input type="text" class="input-xlarge" id="cl-className">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="instructor">Instructor:</label>
                <div class="controls">
                    <input type="text" class="input-xlarge" id="cl-instructor">
                </div>
            </div>
            <div class="classes-manager">
                <div class="control-group">
                    <label class="control-label" for="select-date">Days of week:</label>
                    <div class="controls">
                        <ul id='cl-dayOfWeek'>
                            <li>
                                <input type="radio" name="dayOfWeek" id="default-dayOfWeek" class="cl-dayOfWeek" value="monday" checked>
                                <label class="date-name">Monday</label>
                            </li>
                            <li>
                                <input type="radio" name="dayOfWeek" class="cl-dayOfWeek" value="tuesday">
                                <label class="date-name">Tuesday</label>
                            </li>
                            <li>
                                <input type="radio" name="dayOfWeek"  class="cl-dayOfWeek" value="wednesday">
                                <label class="date-name">Wednesday</label>
                            </li>
                            <li>
                                <input type="radio" name="dayOfWeek" class="cl-dayOfWeek" value="thursday">
                                <label class="date-name">Thursday</label>
                            </li>
                            <li>
                                <input type="radio" name="dayOfWeek" class="cl-dayOfWeek" value="friday">
                                <label class="date-name">Friday</label>
                            </li>
                            <li>
                                <input type="radio" name="dayOfWeek" class="cl-dayOfWeek" value="saturday">
                                <label class="date-name">Saturday</label>
                            </li>
                            <li>
                                <input type="radio" name="dayOfWeek" class="cl-dayOfWeek" value="sunday">
                                <label class="date-name">Sunday</label>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Start Time:</label>
                    <div class="controls">
                      <select class="st-select-hour cl-startTime">
                        <option>01</option>
                        <option>02</option>
                        <option>03</option>
                        <option>04</option>
                        <option>05</option>
                        <option>06</option>
                        <option>07</option>
                        <option>08</option>
                        <option>09</option>
                        <option>10</option>
                        <option>11</option>
                        <option>12</option>
                      </select>
                      <select class="st-select-minute cl-startTime">
                        <option>00</option>
                        <option>15</option>
                        <option>30</option>
                        <option>45</option>
                      </select>
                      <select class="st-select-meridiem cl-startTime">
                        <option>AM</option>
                        <option>PM</option>
                      </select>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">End Time:</label>
                    <div class="controls">
                      <select class="et-select-hour cl-endTime">
                        <option>01</option>
                        <option>02</option>
                        <option>03</option>
                        <option>04</option>
                        <option>05</option>
                        <option>06</option>
                        <option>07</option>
                        <option>08</option>
                        <option>09</option>
                        <option>10</option>
                        <option>11</option>
                        <option>12</option>
                      </select>
                      <select class="et-select-minute cl-endTime">
                        <option>00</option>
                        <option>15</option>
                        <option>30</option>
                        <option>45</option>
                      </select>
                      <select class="et-select-meridiem cl-endTime">
                        <option>AM</option>
                        <option>PM</option>
                      </select>
                    </div>
                </div>
                <a href="javascript:void(0)" class="btn btn-info" id="day-add-btn">Add Day/Time</a>
                <table class="table table-striped table-condensed">
                    {{#if schedule}}
                    <thead  id="classes-calendar-head">
                    {{else}}
                    <thead  id="classes-calendar-head" style="display:none;">
                    {{/if}}
                        <tr>
                            <th>Day Of Week</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody  id="days-list">
                    </tbody>
                </table>
            </div>

            <div class="control-group">
                <label class="control-label" for="classDescription">Description:</label>
                <div class="controls">
                    <textarea rows="5" id="cl-classDescription" class="input-xlarge">{{classDescription}}</textarea>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" for="price">Price($):</label>
                <div class="controls">
                    <input type="text" class="input-xlarge" id="cl-price">
                </div>
            </div>

            <div class="control-group tag-wrapper">
                <label class="control-label" for="tags">Tags:</label>
                <div class="controls">
                    <input type="text" class="input-xlarge" id="cl-tags" value="{{tags}}" data-role="tagsinput" placeholder="Add tags">
                </div>
            </div>

        </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary save-btn" id="calendar-save-btn">Save Class</button>
      <a class="btn facility-cancel-btn" href="javaScript:void(0);">Cancel</a>
    </div>
    </fieldset>
</form>

<form class="form-horizontal classes-wrapper" onsubmit="return false;">
    <fieldset>
        <div class="controls">
            <p class="no-record">No Records Found</p>
        </div>

        <div id="calendar-saved">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Class</th>
                        <th>Instructor</th>
                        <th class="calendar">Calendar</th>
                        <th>Description</th>
                        <th>Tags</th>
                        <th class="align-right">Price</th>
                        <th class="btn-col"></th>
                    </tr>
                </thead>

                <tbody class="list-class-content">
                </tbody>

            </table>
        </div>
    </fieldset>
</form>